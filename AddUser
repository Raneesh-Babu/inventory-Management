    <h3 id="welcomeText"></h3>
    <h4 id="shopNameText"></h4>
  </div>

  <h3>Add New Staff</h3>
  <input type="text" id="username" placeholder="Username (10-digit mobile)" maxlength="10">
  <input type="text" id="name" placeholder="Full Name">
  <input type="password" id="password" placeholder="Password">
  <button id="addBtn" disabled>Add Staff</button>

  <div class="staff-list">
    <h3>Staff Members</h3>
    <table id="staffTable">
      <thead>
        <tr>
          <th>Name</th>
          <th>Username</th>
          <th>Password</th>
          <th>Role</th>
          <th>Block</th>
          <th>Notice</th>
          <th>Update</th>
